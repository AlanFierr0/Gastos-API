generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id          String   @id @default(uuid())
  concepto    String
  monto       Float
  fecha       DateTime
  categoria   String?
  descripcion String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("records")
}
