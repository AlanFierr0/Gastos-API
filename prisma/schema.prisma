generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CategoryType {
  id   String @id @default(uuid())
  name String @unique
  categories Category[]
}

model Category {
  id     String @id @default(uuid())
  name   String @unique
  typeId String
  type   CategoryType @relation(fields: [typeId], references: [id])
  expenses Expense[]
  income Income[]
}

model Expense {
  id         String   @id @default(uuid())
  categoryId String
  name       String?  // nombre agrupable (opcional para compatibilidad con datos existentes)
  amount     Float
  date       DateTime
  notes      String?
  createdAt  DateTime @default(now())
  currency   String   @default("ARS")

  category Category @relation(fields: [categoryId], references: [id])
}

model Income {
  id         String   @id @default(uuid())
  categoryId String?
  source     String
  amount     Float
  date       DateTime
  notes      String?
  createdAt  DateTime @default(now())
  currency   String   @default("ARS")
  isRecurring Boolean @default(false)

  category Category? @relation(fields: [categoryId], references: [id])
}

model ExchangeRateHistory {
  id         String   @id @default(uuid())
  code       String   // USD_OFICIAL, USD_BLUE, etc.
  name       String   // D贸lar Oficial, D贸lar Blue, etc.
  buy        Float
  sell       Float
  year       Int
  month      Int      // 1-12
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([code, year, month])
  @@index([code, year, month])
}

model Investment {
  id          String   @id @default(uuid())
  type        String   // bitcoin, fci, acciones, etc.
  name        String   // Nombre de la inversi贸n
  amount      Float    // Monto invertido
  value       Float    // Valor actual
  currency    String   @default("ARS")
  date        DateTime // Fecha de inversi贸n
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([type])
  @@index([date])
}
