generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CategoryType {
  id   String @id @default(uuid())
  name String @unique
  categories Category[]
}

model Category {
  id     String @id @default(uuid())
  name   String @unique
  typeId String
  type   CategoryType @relation(fields: [typeId], references: [id])
  expenses Expense[]
  income Income[]
}

model Expense {
  id         String   @id @default(uuid())
  categoryId String
  concept    String
  amount     Float
  date       DateTime
  note       String?
  createdAt  DateTime @default(now())
  currency   String   @default("ARS")

  category Category @relation(fields: [categoryId], references: [id])
}

model Income {
  id          String   @id @default(uuid())
  categoryId  String
  concept     String
  amount      Float
  date        DateTime
  note        String?
  createdAt   DateTime @default(now())
  currency    String   @default("ARS")
  isRecurring Boolean  @default(false)

  category Category @relation(fields: [categoryId], references: [id])
}

model FinancialAnalysisConfig {
  id             String   @id @default("default")
  fixed          Json     @default("[]") // Array de nombres de categorías en minúsculas
  wellbeing      Json     @default("[]")
  saving         Json     @default("[]")
  targetFixed    Float    @default(50)
  targetWellbeing Float   @default(30)
  targetSaving   Float    @default(20)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
