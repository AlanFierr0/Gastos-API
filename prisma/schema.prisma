generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CategoryType {
  id   String @id @default(uuid())
  name String @unique
  categories Category[]
}

model Category {
  id     String @id @default(uuid())
  name   String @unique
  typeId String
  type   CategoryType @relation(fields: [typeId], references: [id])
  expenses Expense[]
}

model Person {
  id   String @id @default(uuid())
  name String @unique
  expenses Expense[]
}

model Expense {
  id         String   @id @default(uuid())
  categoryId String
  personId   String?
  amount     Float
  date       DateTime
  notes      String?
  createdAt  DateTime @default(now())
  currency   String   @default("USD")

  category Category @relation(fields: [categoryId], references: [id])
  person   Person?  @relation(fields: [personId], references: [id])
}

model Income {
  id        String   @id @default(uuid())
  source    String
  amount    Float
  date      DateTime
  notes     String?
  createdAt DateTime @default(now())
  currency  String   @default("USD")
}
